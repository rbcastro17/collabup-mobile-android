<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.example.rafae.collabup.ViewPostActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="370dp"
        android:layout_height="189dp"
        android:background="@android:color/white"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/comment_list"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.555" />

    <SurfaceView
        android:background="@android:color/white"
        android:id="@+id/surfaceView2"
        android:layout_width="369dp"
        android:layout_height="247dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/add_comment_txt" />

    <TextView
        android:id="@+id/post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/surfaceView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/surfaceView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/surfaceView"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="italic"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/surfaceView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/surfaceView"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/post_name"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/post_body"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/add_comment_txt"
        android:layout_width="282dp"
        android:layout_height="71dp"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/add_comment_btn"
        android:layout_width="85dp"
        android:layout_height="76dp"
        android:text="Comment"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toBottomOf="@+id/comment_list"
        tools:layout_editor_absoluteY="452dp" />

    <ListView
        android:id="@+id/comment_list"
        android:layout_width="365dp"
        android:layout_height="247dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/surfaceView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/add_comment_txt"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/post_body"
        android:layout_width="362dp"
        android:layout_height="74dp"
        android:text="Body"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView2"
        app:layout_constraintHorizontal_bias="0.523"
        tools:layout_editor_absoluteX="4dp" />

</android.support.constraint.ConstraintLayout>
