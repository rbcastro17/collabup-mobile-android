<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CollabUp_Primary"
    tools:context="com.example.rafae.collabup.RegisterPart2Activity">

    <CheckBox
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="132dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="I Accept the Terms and Condition"
        android:textColor="@color/CollabUp_Label"
        android:textColorHint="@color/CollabUp_Label"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:text="Cancel"
        android:textColor="@color/CollabUp_Label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="156dp"
        android:layout_marginRight="8dp"
        android:background="@color/CollabUp_Secondary"
        android:text="Next"
        android:textColor="@color/CollabUp_Label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Registration"
        android:textAlignment="center"
        android:textColor="@color/CollabUp_Label"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.681" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Your Personal Information"
        android:textAlignment="center"
        android:textColor="@color/CollabUp_Label"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218" />

    <ScrollView
        android:id="@+id/agree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.csmpl.androidlib.edittextmod.EditTextMod xmlns:edittextmod="http://schemas.android.com/apk/res-auto"
                android:id="@+id/firstname"
                style="@style/FullWidthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/CollabUp_InputBox"
                android:hint="First Name"
                android:textColor="@color/CollabUp_input"
                android:textColorHint="@color/CollabUp_input"
                android:textSize="14sp"
                android:textStyle="bold"
                edittextmod:BlockFirstSpace="true"
                edittextmod:BlockSqlInjection="true"
                edittextmod:FailBroadcast="FAILED"
                edittextmod:LimitInput="50"
                edittextmod:ValidationType="NAME"
                edittextmod:error_message="Invalid Name Format" />

            <com.csmpl.androidlib.edittextmod.EditTextMod xmlns:edittextmod="http://schemas.android.com/apk/res-auto"
                android:id="@+id/middlename"
                style="@style/FullWidthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/CollabUp_InputBox"
                android:hint="Middle Name"
                android:textColor="@color/CollabUp_input"
                android:textColorHint="@color/CollabUp_input"
                android:textSize="14sp"
                android:textStyle="bold"
                edittextmod:BlockFirstSpace="true"
                edittextmod:BlockSqlInjection="true"
                edittextmod:FailBroadcast="FAILED"
                edittextmod:LimitInput="50"
                edittextmod:ValidationType="NAME"
                edittextmod:error_message="Invalid Name Format" />

            <com.csmpl.androidlib.edittextmod.EditTextMod xmlns:edittextmod="http://schemas.android.com/apk/res-auto"
                android:id="@+id/lastname"
                style="@style/FullWidthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/CollabUp_InputBox"
                android:hint="Last Name"
                android:textColor="@color/CollabUp_input"
                android:textColorHint="@color/CollabUp_input"
                android:textSize="14sp"
                android:textStyle="bold"
                edittextmod:BlockFirstSpace="true"
                edittextmod:BlockSqlInjection="true"
                edittextmod:FailBroadcast="FAILED"
                edittextmod:LimitInput="50"
                edittextmod:ValidationType="NAME"
                edittextmod:error_message="Invalid Name Format" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        android:text="2/2"
        android:textColor="@color/CollabUp_Label"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp" />
</android.support.constraint.ConstraintLayout>
